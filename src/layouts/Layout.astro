      body {
        font-family: "Inter", sans-serif;
        font-weight: 400;
        font-style: normal;
        color: white;
      }

      html {
        scrollbar-width: thin;
        scrollbar-color: hsl(var(--nextui-primary)) #14161e;
      }
    </style>
  </head>
  <body class="w-full min-h-screen bg-[#14161e] dark">
    <slot />
  </body>
  <ViewTransitions />
</html>
