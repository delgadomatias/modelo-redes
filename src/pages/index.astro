---
import Layout from '../layouts/Layout.astro';
import {CheckboxGroup, Checkbox, Button, Divider} from "@nextui-org/react";

const options = [
	{
		name: "Prim"
	},
	{
		name: "Kruskal"
	},
	{
		name: "Dijkstra"
	},
];
---

<Layout>
	<div class="max-w-[1440px] p-6 mx-auto w-full grid lg:grid-cols-12 items-center justify-center h-screen">
		<canvas id="canvas" height="600" class="bg-background rounded-xl col-span-9 w-full h-[600px]" style="box-shadow: rgba(0, 0, 0, 0.1) 0 10px 50px;"></canvas>
		<div class="bg-[#dee2ea] h-[550px] flex items-center justify-center rounded-xl flex-col gap-4 col-span-3 w-[300px] -ml-4"

		>
				<button  id="reset-btn" class="rounded-full bg-primary p-2 relative group" client:visible>
					<svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="white" viewBox="0 0 256 256"><path d="M235.5,216.81c-22.56-11-35.5-34.58-35.5-64.8V134.73a15.94,15.94,0,0,0-10.09-14.87L165,110a8,8,0,0,1-4.48-10.34l21.32-53a28,28,0,0,0-16.1-37,28.14,28.14,0,0,0-35.82,16,.61.61,0,0,0,0,.12L108.9,79a8,8,0,0,1-10.37,4.49L73.11,73.14A15.89,15.89,0,0,0,55.74,76.8C34.68,98.45,24,123.75,24,152a111.45,111.45,0,0,0,31.18,77.53A8,8,0,0,0,61,232H232a8,8,0,0,0,3.5-15.19ZM67.14,88l25.41,10.3a24,24,0,0,0,31.23-13.45l21-53c2.56-6.11,9.47-9.27,15.43-7a12,12,0,0,1,6.88,15.92L145.69,93.76a24,24,0,0,0,13.43,31.14L184,134.73V152c0,.33,0,.66,0,1L55.77,101.71A108.84,108.84,0,0,1,67.14,88Zm48,128a87.53,87.53,0,0,1-24.34-42,8,8,0,0,0-15.49,4,105.16,105.16,0,0,0,18.36,38H64.44A95.54,95.54,0,0,1,40,152a85.9,85.9,0,0,1,7.73-36.29l137.8,55.12c3,18,10.56,33.48,21.89,45.16Z"></path></svg>
					<span class="absolute bg-[#F0F2F5] bottom-12 right-0 w-max text-sm -left-[calc(50%_+0px)] py-2 px-4 rounded-lg text-black pointer-events-none opacity-0 group-hover:opacity-100 transition-opacity duration-75 ease-linear " style="box-shadow: rgba(0, 0, 0, 0.15) 0 5px 15px 0;">Limpiar</span>
				</button>
			<Divider className="w-[60%]"/>

			<CheckboxGroup
				id="checkbox-group"
				client:visible
				label="Algoritmos"
			>
				{
					options.map((option) => (
						<Checkbox id={`${option.name}-option`} value={option.name} client:visible>{option.name}</Checkbox>
					))
				}
			</CheckboxGroup>
			<Button color="primary" client:visible id="resolve">Resolver</Button>
		</div>
	</div>

	<div class="w-full flex items-center justify-center p-12 flex-col">
		<h1 class="text-7xl font-bold mb-12">Soluciones</h1>
		<div id="solutions-div" class="flex flex-col gap-8"></div>
	</div>

</Layout>

<script src="/main/fsm.js" is:inline ></script>
